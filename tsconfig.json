{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "typesDir/*": ["typesDir/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client", "histoire"]
  },
  "include": ["src", "index.d.ts", "typesDir"],
  "exclude": ["node_modules"]
}
